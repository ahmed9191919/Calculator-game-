    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    max-width: 300px;
    margin: auto;
  }
  button {
    padding: 10px;
    font-size: 1.2em;
    border: none;
    border-radius: 10px;
    background: #3498db;
    color: white;
    cursor: pointer;
    transition: 0.2s;
  }
  button:hover { background: #2980b9; transform: scale(1.05); }
  .score { font-size: 1.5em; margin-top: 20px; }
  @keyframes pop { from { transform: scale(0.8); opacity: 0; } to { transform: scale(1); opacity: 1; } }
  @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
</style>
