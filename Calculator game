<body>

<h1>ðŸ§® Calculator Quiz</h1>
<div id="game">
  <div class="question" id="question"></div>
  <div class="options" id="options"></div>
  <div class="score" id="score"></div>
</div>

<audio id="correctSound" src="https://www.soundjay.com/button/beep-07.wav"></audio>
<audio id="wrongSound" src="https://www.soundjay.com/button/beep-10.wav"></audio>

<script>
let round = 1;
let score = 0;
const totalRounds = 10;

function generateQuestion(level) {
  let num1, num2, answer;
  let ops = ["+", "-", "*", "/"];
  let op = ops[Math.floor(Math.random() * (level < 5 ? 2 : level < 8 ? 3 : 4))];
  
  if (op === "+") {
    num1 = Math.floor(Math.random() * (level * 10)) + 1;
    num2 = Math.floor(Math.random() * (level * 10)) + 1;
    answer = num1 + num2;
  } else if (op === "-") {
    num1 = Math.floor(Math.random() * (level * 10)) + 5;
    num2 = Math.floor(Math.random() * (level * 10)) + 1;
    answer = num1 - num2;
  } else if (op === "*") {
    num1 = Math.floor(Math.random() * level) + 2;
    num2 = Math.floor(Math.random() * level) + 2;
    answer = num1 * num2;
  } else if (op === "/") {
    num2 = Math.floor(Math.random() * level) + 1;
    answer = Math.floor(Math.random() * level) + 2;
    num1 = num2 * answer;
  }
  
  let options = [answer];
  while (options.length < 4) {
    let wrong = answer + Math.floor(Math.random() * 10) - 5;
    if (!options.includes(wrong) && wrong >= 0) options.push(wrong);
  }
  options.sort(() => Math.random() - 0.5);
  
  return { question: `${num1} ${op} ${num2} = ?`, answer, options };
}

function showQuestion() {
  if (round > totalRounds) {
    document.getElementById("game").innerHTML = `<h2>ðŸŽ‰ Game Over!</h2><p>Your Score: ${score}/${totalRounds}</p>`;
    return;
  }
  let q = generateQuestion(round);
  document.getElementById("question").innerText = `Round ${round}: ${q.question}`;
  let optsDiv = document.getElementById("options");
  optsDiv.innerHTML = "";
  q.options.forEach(opt => {
    let btn = document.createElement("button");
    btn.innerText = opt;
    btn.onclick = () => {
      if (opt === q.answer) {
        score++;
        document.getElementById("correctSound").play();
      } else {
        document.getElementById("wrongSound").play();
      }
      round++;
      setTimeout(showQuestion, 500);
    };
    optsDiv.appendChild(btn);
  });
  document.getElementById("score").innerText = `Score: ${score}`;
}

showQuestion();
</script>

</body>
