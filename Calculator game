  body {
    background: linear-gradient(to bottom, #0f2027, #203a43, #2c5364);
    font-family: Arial, sans-serif;
    color: white;
    text-align: center;
    padding: 20px;
  }
  h1 { animation: fadeIn 1s ease; }
